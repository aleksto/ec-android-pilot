<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:background="#ffffff"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout 
		android:id="@+id/main_portrait"
		android:layout_width="match_parent" 
		android:layout_height="match_parent">
		
		<Button 
			android:id="@+id/dateButton_portrait"
			android:text="Periode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true">
		</Button>
		
		<Button 
			android:id="@+id/objectIDButton_portrait"
			android:text="Object ID"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@id/dateButton_portrait">
		</Button>
		
		<TextView 
			android:id="@+id/data_portrait"
			android:text="Info"
			android:textColor="#000000"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/dateButton_portrait"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		></TextView>
		
		<CheckBox 
			android:id="@+id/gasBox_portrait"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true">
		</CheckBox>
		
		<TextView 
			android:id="@+id/gasLabel_portrait"
			android:text="GasBox"
			android:textColor="#000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_above="@id/gasBox_portrait">
		</TextView>
		
		<TextView 
			android:id="@+id/oilLabel_portrait"
			android:text="Oil"
			android:textColor="#000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_above="@id/gasBox_portrait">
		</TextView>
		
		<CheckBox 
			android:id="@+id/oilBox_portrait"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_below="@id/oilLabel_portrait">
		</CheckBox>
		
		<TextView 
			android:id="@+id/waterLabel_portrait"
			android:text="Water"
			android:textColor="#000000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_above="@id/gasBox_portrait">
		</TextView>
		
		<CheckBox 
			android:id="@+id/waterBox_portrait"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@id/waterLabel_portrait">
		</CheckBox>
		
		<RelativeLayout
	   	   	android:id="@+id/graphLayout_portrait"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"				
			android:layout_below="@id/oilBox_portrait">
	    </RelativeLayout>
		
	</RelativeLayout>
</LinearLayout>